{
  "name": "longmoo-utils-monorepo",
  "version": "1.0.0",
  "type": "module",
  "author": "longmo",
  "private": true,
  "description": "A high-quality TypeScript utility library with platform-specific packages",
  "scripts": {
    "build": "pnpm --filter @longmo-utils/common run build && pnpm --filter @longmo-utils/browser run build && pnpm --filter @longmo-utils/node run build",
    "build:common": "pnpm --filter @longmo-utils/common run build",
    "build:browser": "pnpm --filter @longmo-utils/browser run build",
    "build:node": "pnpm --filter @longmo-utils/node run build",
    "test": "vitest run",
    "test:browser": "vitest run --config vitest.browser.config.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "pnpm --filter './packages/*' run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@typescript-eslint/typescript-estree": "^8.26.1",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "happy-dom": "20.3.4",
    "tsdown": "0.20.0-beta.4",
    "typescript": "^5.9.3",
    "vite": "^8.0.0-beta.8",
    "vitest": "^4.0.17",
    "typescript-eslint": "^8.26.1",
    "@vitest/eslint-plugin": "^1.1.15"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.28.1"
}
